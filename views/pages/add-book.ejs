<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head'); %>
</head>

<body class="container-fluid w-100 p-0">

    <header>
        <%- include('../layout/header'); %>
    </header>

    <main>


        <!-- Login Start -->
        <section class="ftco-section">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10">
                        <div class="wrap d-md-flex justify-content-center">

                            <div class="login-wrap p-4 p-md-5">
                                <div class="d-flex text-center">
                                    <div class="w-100">
                                        <h3 class="mb-4">Add Book to the Catalog</h3>
                                    </div>
                                </div>
                                <form id="addBookForm" class="book-form" method="post" onsubmit="return false;">
                                    <div id="addBookError" class="alert alert-danger" role="alert"
                                        style="display: none;">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="title">Title</label>
                                        <input id="title" type="text" class="form-control" placeholder="Title" required name="title">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="subtitle">Subtitle</label>
                                        <input id="subtitle" type="text" class="form-control" placeholder="Subtitle" name="subtitle">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="releaseDate">Release Date</label>
                                        <input type="date" class="form-control" required name="releaseDate">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="select-genres">Authors</label>
                                        <select id="select-authors" multiple placeholder="Enter Authors..." required></select>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="select-genres">Genres</label>
                                        <select id="select-genres" multiple placeholder="Pick genres..." required></select>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="pageNumber">Number of Pages</label>
                                        <input id="pageNumber" type="number" class="form-control" placeholder="Page Number" required
                                            name="pages">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="isbn">ISBN</label>
                                        <input id="isbn" type="text" class="form-control" placeholder="ISBN code" required name="isbn">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="price">Price</label>
                                        <input id="price" type="number" class="form-control" placeholder="Price" required
                                            name="price" min="0" step="0.01">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="rating">Rating</label>
                                        <input id="rating" type="number" class="form-control" placeholder="Rating" required
                                            name="rating" min="0" max="5" step="0.1">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="bookDescription">Description</label>
                                        <textarea id="bookDescription" class="form-control" placeholder="Description" required
                                            name="description" rows="5"></textarea>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="coverURL">Book Cover</label>
                                        <input id="coverURL" type="url" class="form-control" placeholder="Please enter the book cover URL" required name="coverURL">
                                    </div>
                                    <div class="product-img position-relative overflow-hidden pt-3 pb-3 mb-2 border bg-secondary">
                                        <label id="emptyImageLabel"class="label thumbnail-label">Thumbnail for cover image will show up here</label>
                                        <img id="coverThumbnail" class="img-fluid cover-img thumbnail-image" src="$" alt="" height="200px" width="auto">
                                    </div>

                                    <div class="form-group">
                                        <button type="submit"
                                            class="form-control btn btn-primary rounded submit px-3">Add</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Login End -->

    </main>

    <footer>
        <%- include('../layout/footer'); %>
    </footer>


    <%- include('../layout/scripts'); %>
        <script src="/js/add-book.js"></script>
</body>

</html>