<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head'); %>
</head>

<body class="container-fluid w-100 p-0">

    <header>
        <%- include('../layout/header'); %>
    </header>

    <main>


        <!-- Login Start -->
        <section class="ftco-section">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10">
                        <div class="wrap d-md-flex">
                            
                            <div class="login-wrap p-4 p-md-5">
                                <div class="d-flex text-center">
                                    <div class="w-100">
                                        <h3 class="mb-4">Create Account</h3>
                                    </div>
                                </div>
                                <form id="registerForm" class="register-form" method="post" onsubmit="return false;">
                                    <div id="registerError" class="alert alert-danger" role="alert" style="display: none;">
                                        
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="name">Name</label>
                                        <input type="text" class="form-control" placeholder="Name" required name="name">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="name">Birth Date</label>
                                        <input type="date" class="form-control" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="name">Email</label>
                                        <input type="email" class="form-control" placeholder="Email" required name="email">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="password">Password</label>
                                        <input type="password" class="form-control" placeholder="Password" required name="password">
                                    </div>
                                    
                                    <div class="form-group">
                                        <button type="submit"
                                            class="form-control btn btn-primary rounded submit px-3">Register</button>
                                    </div>
                                </form>
                                <p class="text-center">Already have an account? <a href="/pages/login">Sign In</a></p>
                            </div>
                            <div class="login-image" style="background-image: url(/img/register-banner.jpeg);">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Login End -->

    </main>

    <footer>
        <%- include('../layout/footer'); %>
    </footer>


    <%- include('../layout/scripts'); %>
    <script src="/js/login.js"></script>
</body>

</html>