<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../layout/head'); %>
</head>

<body class="container-fluid w-100 p-0">

    <header>
        <%- include('../layout/header'); %>
    </header>

    <main>


        <!-- Login Start -->
        <section class="ftco-section">
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10">
                        <div class="wrap d-md-flex">
                            <div class="login-image" style="background-image: url(/img/login-banner.jpeg);">
                            </div>
                            <div class="login-wrap p-4 p-md-5">
                                <div class="d-flex text-center">
                                    <div class="w-100">
                                        <h3 class="mb-4">Sign In</h3>
                                    </div>
                                </div>
                                <form id="loginForm" class="signin-form" method="post" onsubmit="return false;">
                                    <div class="form-group mb-3">
                                        <label class="label" for="name">Email</label>
                                        <input type="email" class="form-control" placeholder="Email" required name="email">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label class="label" for="password">Password</label>
                                        <input type="password" class="form-control" placeholder="Password" required name="password">
                                    </div>
                                    <div id="loginError" class="alert alert-danger" role="alert" style="display: none;">
                                        
                                    </div>
                                    <div class="form-group">
                                        <button type="submit"
                                            class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                                    </div>
                                    <div class="form-group d-md-flex">
                                        <div class="w-50 text-left">
                                            <label class="checkbox-wrap checkbox-primary mb-0">Remember Me
                                                <input type="checkbox" checked="">
                                                <span class="checkmark"></span>
                                            </label>
                                        </div>
                                        <div class="w-50 text-md-right">
                                            <a href="#">Forgot Password</a>
                                        </div>
                                    </div>
                                </form>
                                <p class="text-center">Not a member? <a data-toggle="tab" href="pages/signup">Sign Up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Login End -->

    </main>

    <footer>
        <%- include('../layout/footer'); %>
    </footer>


    <%- include('../layout/scripts'); %>
    <script src="/js/login.js"></script>
</body>

</html>